<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cffffff"
    android:orientation="vertical">


    <include layout="@layout/activity_title" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_05"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_back_page"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/page_tv_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="@string/back_page"
                    android:textColor="@color/cffffff"
                    android:textSize="@dimen/dp_14" />


                <TextView
                    android:id="@+id/tv_page_show"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/dp_14" />


                <TextView
                    android:id="@+id/tv_next_page"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/page_tv_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="@string/next_page"
                    android:textColor="@color/cffffff"
                    android:textSize="@dimen/dp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_05"
                android:background="@color/cefefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/bar_code"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:layout_weight="1"
                    android:background="@color/colorAccent">

                    <EditText
                        android:id="@+id/et_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_02"
                        android:background="@color/cffffff"
                        android:paddingLeft="@dimen/dimen_10"
                        android:textSize="@dimen/dp_15" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_select"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_02"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_02"
                    android:background="@drawable/page_tv_bg"
                    android:gravity="center"
                    android:text="@string/select_str"
                    android:textColor="@color/cffffff"
                    android:textSize="@dimen/dp_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_05"
                android:background="@color/cefefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/supplier"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


                <TextView
                    android:id="@+id/tv_supplier"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_05"
                android:background="@color/cefefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/department"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


                <TextView
                    android:id="@+id/tv_department"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_05"
                android:background="@color/cefefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/product_name"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_05"
                android:background="@color/cefefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/specifications"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


                <TextView
                    android:id="@+id/tv_specifications"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/storage_location"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


                <TextView
                    android:id="@+id/tv_storage_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_05"
                android:background="@color/cefefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/vender"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


                <TextView
                    android:id="@+id/tv_vender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_05"
                android:background="@color/cefefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/batch_number"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


                <TextView
                    android:id="@+id/tv_batch_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/validity_time"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


                <TextView
                    android:id="@+id/tv_validity_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_05"
                android:background="@color/cefefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/gz_str"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


                <TextView
                    android:id="@+id/tv_gz_str"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_05"
                android:background="@color/cefefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/have_number"
                        android:textColor="@color/c000"
                        android:textSize="@dimen/dp_15" />


                    <TextView
                        android:id="@+id/tv_have_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/c000"
                        android:textSize="@dimen/dp_15" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/price_str"
                        android:textColor="@color/c000"
                        android:textSize="@dimen/dp_15" />


                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/c000"
                        android:textSize="@dimen/dp_15" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_05"
                android:background="@color/cefefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/putin_bar"
                    android:textColor="@color/c000"
                    android:textSize="@dimen/dp_15" />


                <LinearLayout
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:background="@color/colorAccent">

                    <EditText
                        android:id="@+id/et_input_bar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_02"
                        android:background="@color/cffffff"
                        android:gravity="center_vertical"
                        android:textColor="@color/c000"
                        android:textSize="@dimen/dp_15" />


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_put_goods"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/page_tv_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/put_goods"
                android:textColor="@color/cffffff"
                android:textSize="@dimen/dp_18" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>